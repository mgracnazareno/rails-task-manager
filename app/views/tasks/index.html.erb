<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
       <i class="fa-regular fa-square-check"></i>
        <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
    <li><%= link_to task.title, task_path(task) %></li>  
  <% end %>
</ul>

<p><%= link_to 'Add new task', tasks_new_path %></p>