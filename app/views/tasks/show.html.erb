
<h1><%= @task.title %></h1>

<p><%= @task.details %></p>


<% if @task.completed %>
  <i class="fa-solid fa-square-check"></i>
  <% else %>
  <i class=" "></i>
<% end %>

<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit task', edit_task_path %>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>